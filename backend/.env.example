# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/cyberlab?retryWrites=true&w=majority
# For production: mongodb://mongodb-service:27017/cyber-lab-platform

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d

# Kubernetes Configuration
K8S_NAMESPACE=student-labs
LAB_IMAGE=your-registry/ubuntu-desktop:latest

# Lab Configuration
LAB_SESSION_TIMEOUT=7200000
MAX_CONCURRENT_LABS=3

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM_NAME=CyberLab Admin
FRONTEND_URL=http://localhost:5173
